{
  "include": ["**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "nodenext",
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "jsx": "react-jsx"
  },
  "ts-node": {
    "preferTsExts": true
  }
}
