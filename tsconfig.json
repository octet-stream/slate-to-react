{
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "src/**/__helper__/**/*.ts",
    "src/**/__helper__/**/*.tsx",
    "src/**/*.test.ts",
    "src/**/*.test.tsx"
  ],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "jsx": "react",
    "jsxFactory": "createElement",
    "jsxFragmentFactory": "Fragment"
  },
  "ts-node": {
    "transpileOnly": true
  }
}
