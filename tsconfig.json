{
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "src/**/__helper__/**/*.ts",
    "src/**/__helper__/**/*.tsx"
  ],
  "compilerOptions": {
    "baseUrl": "src",
    "target": "esnext",
    "module": "esnext",
    "strict": false, // TODO: Enable strict mode and fix types
    "noImplicitAny": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "jsx": "react"
  }
}
