{
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "src/**/__helper__/**/*.ts",
    "src/**/__helper__/**/*.tsx"
  ],
  "compilerOptions": {
    "baseUrl": "src",
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "nodenext",
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "jsx": "react-jsx"
  },
  "ts-node": {
    "preferTsExts": true
  }
}
